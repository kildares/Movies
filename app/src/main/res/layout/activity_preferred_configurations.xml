<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kilda.movies.PreferredConfigurations">

    <TextView
        android:id="@+id/tv_movie_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movieOrder"
        app:layout_constraintLeft_toLeftOf="parent
" />

    <Spinner
        android:id="@+id/sp_movie_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_movie_order"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
